.button-group{
	display: inline-block;

	.button{
		float: left;
		@include border-radius(0);

		&:first-child{
			@include border-radius($borderRadius 0 0 $borderRadius);
		}

		&:last-child{
			@include border-radius(0 $borderRadius $borderRadius 0);
		}
	}
}