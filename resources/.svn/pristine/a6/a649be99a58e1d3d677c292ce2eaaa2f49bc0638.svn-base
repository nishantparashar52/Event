	//comments
------------------------------------------------*/
.flight-cancellation{
	.left{
		padding-right: 20px;

		@include screen(medium){
			padding-right: ($gutter / 2);
		}
	}

	.right{
		padding-left: 20px;

		@include screen(medium){
			padding-left: ($gutter / 2);
		}
	}

	.list{
		margin-left: 20px;
		border-top: 1px solid $color-border;
		margin-top: 10px;
		padding-top: 10px;
	}

	.icon{
		position: relative;
		padding-left: 10px;
		padding-right: 0;
		
		&:before{
			position: absolute;
	    top: 1px;
	    left: 0;
		}
	}

	.panel-footer{
		@include screen(medium){
			text-align: center;
		}
	}
}