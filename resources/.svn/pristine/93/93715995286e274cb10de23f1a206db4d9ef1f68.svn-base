
/*---------------------------------------------------------- 
  @mixin for create input box color variation
  @param: $name - name of input box color.
  @param: $color - for border color.
----------------------------------------------------------*/

@mixin inputGroupVariation($name, $color){
  .input-group{
    &.#{$name}{
      .input-addon{
        background-color: $color;
        border-color: $color;
      }

      .input{
        border-color: $color;
      }

      .button{
        background-color: $color;
        border:1px solid darken($color, 5%);

        @include hover-focus-active{
          background-color: darken($color, $buttonHoverVariation);
        }
      }

      &.disabled{
        .button{
          @include hover-focus{
            background-color: $color;
          }
        }
      }
    }
  }
}